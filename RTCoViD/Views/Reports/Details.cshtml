@model RTCoViD.Models.Report

@{
    ViewData["Title"] = "Details";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<h2>Details</h2>

<div>
    <h4>Report</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Province)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Province)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Country)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Latitude)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Latitude)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Longitude)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Longitude)
        </dd>
    </dl>
</div>


<div id="exTab2" class="container">
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#1" data-toggle="tab">Daily Recovered Table</a>
        </li>
        <li>
            <a href="#2" data-toggle="tab">Daily Confirmed Table</a>
        </li>
        <li>
            <a href="#3" data-toggle="tab">Daily Deaths Table</a>
        </li>
    </ul>

    <div class="tab-content ">
        <div class="tab-pane active" id="1">
            <div class="container">
                <br />
                <div>
                    <table id="dailyRecoveredTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.DailyRecoveredReports.FirstOrDefault().Date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DailyRecoveredReports.FirstOrDefault().Value)
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model.DailyRecoveredReports)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Value)
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="2">
            <div class="container">
                <br />
                <div>
                    <table id="dailyConfirmedTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.DailyConfirmedReports.FirstOrDefault().Date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DailyConfirmedReports.FirstOrDefault().Value)
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model.DailyConfirmedReports)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Value)
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="3">
            <div class="container">
                <br />
                <div>
                    <table id="dailyDeathsTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.DailyDeathsReports.FirstOrDefault().Date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DailyDeathsReports.FirstOrDefault().Value)
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model.DailyDeathsReports)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Value)
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>






<div>
    <a asp-action="Edit" asp-route-id="@Model.ReportId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<style>
    .container {
        padding-left: 0px;
        padding-right: 0px;
    }

    .container-fluid {
        padding-left: 0px;
        padding-right: 0px;
    }
</style>

<script>
    $('#dailyConfirmedTable').dataTable({});
    $('#dailyRecoveredTable').dataTable({});
    $('#dailyDeathsTable').dataTable({});

</script>